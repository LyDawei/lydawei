---
import BaseLayout from "../layouts/BaseLayout.astro"
---

<BaseLayout title="David Ly - Blog">
  <div class="blog-container">
    
    <!-- Animated Header -->
    <header class="blog-header">
      <h1 class="animated-title">Recent Writing</h1>
      <p class="subtitle fade-in-up">Coming soon - thoughts on development, leadership, and building better software</p>
    </header>

    <!-- Floating particles background -->
    <div class="particles-container">
      <div class="particle"></div>
      <div class="particle"></div>
      <div class="particle"></div>
      <div class="particle"></div>
      <div class="particle"></div>
    </div>

    <!-- Empty state with animation -->
    <section class="empty-state">
      <div class="empty-content">
        <div class="code-block">
          <div class="code-line">
            <span class="keyword">const</span> 
            <span class="variable">blog</span> 
            <span class="operator">=</span> 
            <span class="string">"under construction"</span>
            <span class="punctuation">;</span>
          </div>
          <div class="code-line">
            <span class="comment">// Stay tuned for content!</span>
          </div>
        </div>
        <p class="empty-message">Check back soon for posts about software development and team leadership.</p>
      </div>
    </section>

  </div>
</BaseLayout>

<style>
  .blog-container {
    max-width: 800px;
    position: relative;
    overflow: hidden;
  }

  /* Animated Header */
  .blog-header {
    text-align: center;
    margin-bottom: 4rem;
    position: relative;
    z-index: 2;
  }

  .animated-title {
    font-size: 3rem;
    color: #ffffff;
    margin-bottom: 1rem;
    background: linear-gradient(45deg, #64b5f6, #90caf9, #bbdefb);
    background-size: 300% 300%;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: gradientShift 4s ease-in-out infinite;
  }

  .subtitle {
    font-size: 1.2rem;
    color: #b0b0b0;
    animation: fadeInUp 1s ease-out 0.5s both;
  }

  @keyframes gradientShift {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Floating Particles */
  .particles-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 1;
  }

  .particle {
    position: absolute;
    width: 4px;
    height: 4px;
    background: #64b5f6;
    border-radius: 50%;
    opacity: 0.6;
  }

  .particle:nth-child(1) {
    left: 20%;
    animation: float 6s ease-in-out infinite;
  }

  .particle:nth-child(2) {
    left: 40%;
    animation: float 8s ease-in-out infinite 1s;
  }

  .particle:nth-child(3) {
    left: 60%;
    animation: float 7s ease-in-out infinite 2s;
  }

  .particle:nth-child(4) {
    left: 80%;
    animation: float 9s ease-in-out infinite 3s;
  }

  .particle:nth-child(5) {
    left: 10%;
    animation: float 5s ease-in-out infinite 4s;
  }

  @keyframes float {
    0%, 100% {
      transform: translateY(0) rotate(0deg);
      opacity: 0.6;
    }
    50% {
      transform: translateY(-100px) rotate(180deg);
      opacity: 1;
    }
  }

  /* Empty State */
  .empty-state {
    position: relative;
    z-index: 2;
    animation: slideInUp 0.8s ease-out 0.3s both;
  }

  .empty-content {
    text-align: center;
    padding: 3rem;
  }

  .code-block {
    background: #2d2d2d;
    border-radius: 12px;
    padding: 2rem;
    margin: 2rem auto;
    max-width: 500px;
    font-family: 'Courier New', monospace;
    border: 1px solid #404040;
    animation: glow 3s ease-in-out infinite alternate;
  }

  @keyframes glow {
    from { box-shadow: 0 0 10px rgba(100, 181, 246, 0.2); }
    to { box-shadow: 0 0 20px rgba(100, 181, 246, 0.4); }
  }

  .code-line {
    margin: 0.5rem 0;
    text-align: left;
  }

  .keyword { color: #ff79c6; }
  .variable { color: #50fa7b; }
  .operator { color: #ff5555; }
  .string { color: #f1fa8c; }
  .punctuation { color: #f8f8f2; }
  .comment { color: #6272a4; font-style: italic; }

  .empty-message {
    color: #b0b0b0;
    font-size: 1.1rem;
    margin-top: 2rem;
  }

  @keyframes slideInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Responsive */
  @media (max-width: 768px) {
    .blog-container {
      max-width: 100%;
      padding: 0 0.5rem;
    }

    /* Mobile particle optimization */
    .particle {
      width: 2px;
      height: 2px;
    }

    .particle:nth-child(4), .particle:nth-child(5) {
      display: none; /* Hide extra particles on mobile */
    }

    .blog-header {
      text-align: center;
      margin-bottom: 2rem;
    }

    .animated-title {
      font-size: 1.8rem;
      margin-bottom: 0.8rem;
    }

    .subtitle {
      font-size: 1rem;
      padding: 0 0.5rem;
      line-height: 1.5;
    }
    
    .empty-content {
      padding: 1.5rem 1rem;
      margin: 0 0.25rem;
      border-radius: 8px;
    }
    
    .code-block {
      padding: 1rem;
      font-size: 0.85rem;
      border-radius: 6px;
      overflow-x: auto;
    }

    .empty-message {
      font-size: 0.95rem;
      margin-top: 1.5rem;
      line-height: 1.5;
      padding: 0 0.5rem;
    }
  }

  /* Extra small mobile devices */
  @media (max-width: 480px) {
    .particle {
      display: none; /* Hide particles on very small screens */
    }

    .blog-container {
      padding: 0 0.25rem;
    }

    .animated-title {
      font-size: 1.6rem;
    }

    .subtitle {
      font-size: 0.9rem;
    }

    .empty-content {
      padding: 1.2rem 0.8rem;
    }

    .code-block {
      padding: 0.8rem;
      font-size: 0.8rem;
    }

    .empty-message {
      font-size: 0.9rem;
      margin-top: 1.2rem;
    }
  }
</style>
